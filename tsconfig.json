{
    "compilerOptions": {
      "lib": [
          "ES2021",
          "webworker"
      ],
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "dist",
      "module": "NodeNext",
      "esModuleInterop": true,
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "types": [
          "node",
      ]
    },
    "include": [
        "src"
    ],
    "ts-node": {
      "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node16"
      }
    }
  }

